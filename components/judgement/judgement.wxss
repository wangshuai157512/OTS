.choice {
    padding: 0 30rpx 30rpx;
}
.choice-item {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
    padding: 35rpx 30rpx;
    box-shadow:0px 4px 20px 0px rgba(0,0,0,0.06);
    border-radius: 6rpx;
    border: 1px solid transparent;
}
.choice-item__order {
    align-self: flex-start;
    width: 46rpx;
    height: 46rpx;
    margin: 0rpx 30rpx 0rpx 0;
    font-size: 28rpx;
    line-height: 46rpx;
    text-align: center;
    border-radius: 30rpx;
    font-family:ArialMT;
}
.choice-item__order image {
    width: 46rpx;
    height: 46rpx;
}
.choice-item__text {
    flex: 1px;
    font-size: 30rpx;
    color: #272E40;
    line-height: 1.3;
}
.choice-item.choice-item_chosen {
    border: 1px solid #407FFF;
}
