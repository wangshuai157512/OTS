page {
    height: 100%;
    background:rgba(247,249,252,1);
    overflow-y: hidden;
}

.examination-info {
    height: 100%;
    position: relative;
}

.exm-bgc-content {
    width: 100%;
    height: 360rpx;
}
.exm-bgc-content image {
    width: 100%;
    height: 100%;
}

.exm-content-box {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 30rpx;
    display: flex;
    justify-content: center;
}
.exm-content {
    position: relative;
    width: 690rpx;
    height: 95%;
    background-color: #fff;
    border-radius: 24rpx;
}

.exm-info-img image {
    width: 210rpx;
    height: 183rpx;
}
.exm-info-img {
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 98rpx 0 109rpx;
}

.paper-title {
    box-sizing: border-box;
    padding: 0 50rpx;
    color: #272E40;
    font-size: 40rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    text-align: center;
    line-height: 1.6;
}


.exm-notice {
    margin-top: 60rpx;
    box-sizing: border-box;
    padding: 0 50rpx;
}
.exm-notice-item {
    display: flex;
    margin-bottom: 20rpx;
}
.exm-notice-item .blue-spot-wrap .blue-spot {
    width:8rpx;
    height:8rpx;
    background:#1966FF;
    border-radius: 50%;
    margin-top: 17rpx;
    margin-right: 10rpx;
}
.exm-notice-text {
    color: #7784A1;
    font-size: 26rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    line-height: 1.6;
}

.exm-btn-content {
    width: 100%;
    position: absolute;
    bottom: 60rpx;
    display: flex;
    justify-content: center;
    left: 0rpx;
}
.exm-btn {
    width: 586rpx;
    height: 94rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    background: linear-gradient(to right,#3B8DFF,#1756FF);
    border-radius: 100px;
    /*margin: 0 auto;*/
}

.special-color {
    color: #272E40;
    font-weight: 600;
}
