.card{
  width:686rpx;
  margin:0 auto;
  /*margin-bottom:20rpx;*/
  margin-top:20rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 10rpx 20rpx 0rpx rgba(38,47,64,0.04);
  border-radius:16rpx;
  box-sizing: border-box;
  padding:0 30rpx
}
.container {
  padding-bottom: 20rpx;
}
.examRecord{
  height:370rpx;
  margin-top:30rpx;
  padding:0;
  padding-top: 48rpx;
}
.numInfo{
  font-size: 28rpx;
  width: 100%;
  display: flex;
  text-align: center;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.answerNum .swiper-box{
  height:600rpx
}
.wrongNum .swiper-box{
  height:600rpx
}
.swiper-box{
  height:450rpx
}
.numInfo text{
  font-size:88rpx;
  line-height: 88rpx;
}
.numTitle{margin-bottom:12rpx}
.recordLeft{
  border-right:1px solid #E7ECF1;
  width:50%
}
.recordRight{
 width: 50%;
}
.viewDetail{
  width: 586rpx;
  height:94rpx;
  line-height: 94rpx;
  margin:0 auto;
  margin-top:40rpx;
  text-align: center;
  color:#fff;
  background:linear-gradient(270deg,rgba(59,141,255,1) 0%,rgba(23,86,255,1) 100%);
  border-radius:47rpx;
}
.cardTitle{
  font-size: 30rpx;
  font-weight: 600;
  position: relative;
  line-height: 41rpx;
  padding-left:12rpx
}
.answerNum,.wrongNum{
  height:630rpx;
  padding-top:24rpx;
}
.wrongPercent{
  height:550rpx;
  padding-top:24rpx;
}
.cardTitle::before{
  content: "";
  width:6rpx;
  height:28rpx;
  background-color:#1966FF;
  border-radius: 1rpx 1rpx 11rpx 1rpx;
  position: absolute;
  left: 0;
  top:7rpx
}
.fleft{
  float:left
}
.fright{
  float: right;
}
swiper-item{
  margin-top:50rpx;
}
.numTotal{
  font-size: 24rpx;
  width: 620rpx;
  margin:0 auto;
  display: flex;
  text-align: center;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding:0 10rpx 50rpx 10rpx;
  box-sizing: border-box;
  border-bottom:1px solid rgba(224,230,238,1);
}

.num {
  font-size: 36rpx;
  line-height: 50rpx;
  margin-bottom: 9rpx;
  font-weight: 600;
}
.week,.month{
  width:64rpx;
  height:36rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  border-radius:100rpx;
  border:2rpx solid transparent;
  text-align: center;
}
.week{margin-right:20rpx}
.on{
  width:64rpx;
  height:36rpx;
  line-height: 36rpx;
  background:#fff;
  border-radius:100rpx;
  border:2rpx solid #1966FF;
  color:#1966FF;
  font-size: 24rpx;
}
.chart{
  width: 100%;
  height:400rpx;
}
