
page {
    height: 100%;
    background:rgba(247,249,252,1);
    overflow-y: hidden;
}

.examination-info {
    height: 100%;
    position: relative;
}

.exm-bgc-content {
    width: 100%;
    height: 360rpx;
}
.exm-bgc-content image {
    width: 100%;
    height: 100%;
}

.exm-content-box {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 30rpx;
    display: flex;
    justify-content: center;
}
.exm-content {
    position: relative;
    width: 690rpx;
    height: 95%;
    background-color: #fff;
    border-radius: 24rpx;
}

.exm-face-img {
    width: 100%;
    display: flex;
    justify-content: center;
    margin: 80rpx 0;
    background-color: #fff;
}
.exm-face-img-box {
    position: relative;
    width: 360rpx;
    height: 360rpx;
    border-radius: 50%;
    overflow: hidden;
}
.exm-face-img-box image {
    width: 100%;
    height: 100%;
}
.exm-face-img-box .exm-child {
    width: 360rpx;
    height: 360rpx;
    position: absolute;
    bottom: -180rpx;
    left: 0;
    /* background-color: #1966FF; */
    /* background-image: url("https://xxzx.chinaedu.net/wx/img/1587093946463.png") no-repeat; */
    /* background-size: 100% 100%; */
    z-index: 50;
    animation: myMove 2s linear infinite;
    -webkit-animation: myMove 2s linear infinite
}
.exm-face-img-box .exm-child image {
    width: 100%;
    height: 100%;

}
@keyframes myMove {
    0% {
        bottom: -180rpx;
    }

    50% {
        bottom: 180rpx;
    }

    100% {
        bottom: -180rpx;
    }
}
@-webkit-keyframes myMove {
    0% {
        bottom: -180rpx;
    }

    50% {
        bottom: 180rpx;
    }

    100% {
        bottom: -180rpx;
    }
}
.exm-btn-content {
    width: 100%;
    position: absolute;
    bottom: 60rpx;
    display: flex;
    justify-content: center;
    left: 0rpx;
}
.exm-btn {
    width: 586rpx;
    height: 94rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    background: linear-gradient(to right,#3B8DFF,#1756FF);
    border-radius: 100px;
    /*margin: 0 auto;*/
}

.face-tip-title {
    color: #272E40;
    font-size: 40rpx;
    text-align: center;
    font-family:PingFang-SC-Bold,PingFang-SC;
    font-weight:bold;
}
.face-tip-text {
    color: #7784A1;
    font-size: 26rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    text-align: center;
    margin-top: 24rpx;
}
.face-dis-header {
    padding-top: 64rpx;
}

.photo-requirement {
    box-sizing: border-box;
    padding: 0 50rpx;
}
.photo-requirement-text {
    color: #272E40;
    font-size: 30rpx;
    font-family:PingFang-SC-Bold,PingFang-SC;
    font-weight:bold;
    margin-bottom: 30rpx;
}
.requirement-item-text {
    color: #7784A1;
    font-size: 26rpx;
    margin-top: 15rpx;
}
