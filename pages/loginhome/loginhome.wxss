/* pages/login/loginhome.wxss */
page{
  width: 100%;
  height: 100%;
}
.page{
  width: 100%;
  height: 100%;
  background-color: #F7F9FC;
  position: relative;
}
.topbg{
  width: 100%;
  height: 30%;
  background-size: 100% 100%;
}
.main{
  width: 91%;
  height: 95%;
  background-color: #FFFFFF;
  position: absolute;
  top:2.5%;
  right: 4.5%;
  box-shadow:0rpx 10rpx 30rpx 0rpx rgba(39,46,64,0.1);
  border-radius:24rpx;
}
.main_icon{
  width: 100%;
  height: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.main_icon image{
  width: 160rpx;
  height: 160rpx;
  /* background-color: aquamarine; */
}
.main_con{
  width: 100%;
  height: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.user_login{
  width: 100%;
  height: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}
.inputBox.hover{
  border:1px solid #1966FF;
}
.inputBox:hover:not(:nth-child(1)){
  border:1px solid #1966FF;
}
.inputBox.select{
  border:1px solid #1966FF;
}
.inputBox{
  width:85%;
  height:16%;
  background:rgba(247,249,252,1);
  border:1px solid rgba(247,249,252,1);
  border-radius:48rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  color: #929CA6;
}
.inputBox image{
  width: 30rpx;
  height: 30rpx;
  background-size:100% 100%;
}
.btn_login{
  width:85%;
  height:16%;
  background:linear-gradient(270deg,rgba(59,141,255,1) 0%,rgba(23,86,255,1) 100%);
  border-radius:48rpx;
  /* border:1px solid #ddd; */
  text-align: center;
  color: #FFF;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn_login.gray{
  opacity: 0.5;
}
.weix_login{
  width: 85%;
  height: 20%;
  border-top: 2rpx solid #eee;
  position: relative;
}
.weixin{
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  color: #9CA5AD;
  font-size: 22rpx;
  top:-50rpx;
  left: calc(50% - 80rpx);
}
.weixin .icon{
  width: 160rpx;
  height: 100rpx;
  background-color: #FFF;
  display: flex;
  justify-content: center;
}
.weixin .icon image{
  width: 100rpx;
  height: 100rpx;
}
.picker{
  width: 100%;
  height: 40%;
  position: fixed;
  bottom: 0;
  z-index: 2;
  background:rgba(255,255,255,1);
  box-shadow:0px 10px 10px 0px rgba(0,0,0,0.05);
  border:1px solid rgba(0,0,0,0.1);
  text-align: center;
}
.picker .btn_class{
  width: 92%;
  height: 100rpx;
  position: absolute;
  left: 4%;
  display: flex;
  z-index: 3;
  justify-content: space-between;
  align-items: center;
}
.cancel{
  color: #929CA6;
  font-size: 14px;
}
.picker .btn_class view{
  width:120rpx;
  height:60rpx;
  background:linear-gradient(225deg,rgba(59,141,255,1) 0%,rgba(23,86,255,1) 100%);
  border-radius:30rpx;
  line-height: 60rpx;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
}
.picker picker-view{
  height: calc(100% - 100rpx);
}
.lightBox{
  width: 100%;
  height: 60%;
  position: fixed;
  top: 0;
  z-index: 2;
  background:#000;
  opacity: 0.5;
}
.btn-wrap {
  height: 100rpx;
  border-bottom: 1rpx solid rgba(231,236,241,1);
}
.pic-wrap {
  height: 100%;
  box-sizing: border-box;
  padding: 0 40rpx;
}
